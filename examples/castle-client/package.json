{
  "name": "@entente/example-castle-client",
  "version": "0.1.0",
  "description": "Example consumer service that uses castle-service - demonstrating Entente contract testing",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run test/consumer.test.ts",
    "register:consumer": "node ../../packages/cli/dist/cli.js register-service --type consumer --name castle-client",
    "deploy:consumer": "node ../../packages/cli/dist/cli.js deploy-service --type consumer --name castle-client --service-version 0.1.0 --environment test",
    "can-i-deploy": "node ../../packages/cli/dist/cli.js can-i-deploy --type consumer --service castle-client --service-version 0.1.0 --environment test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@entente/consumer": "workspace:*",
    "@entente/types": "workspace:*",
    "@hono/node-server": "^1.13.5",
    "dotenv": "^17.2.2",
    "hono": "^4.6.7"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "entente",
    "contract-testing",
    "example",
    "consumer",
    "hono",
    "client"
  ]
}
