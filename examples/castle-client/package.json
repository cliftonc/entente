{
  "name": "@entente/example-castle-client",
  "version": "0.1.3",
  "description": "Example consumer service that uses castle-service - demonstrating Entente contract testing",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc src/worker.ts --outDir dist --target es2022 --module es2022 --moduleResolution bundler --allowSyntheticDefaultImports",
    "dev": "wrangler dev",
    "dev:node": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run test/consumer.test.ts",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "register:consumer": "node ../../packages/cli/dist/cli.js register-service --type consumer --name castle-client --spec spec/openapi.json --spec-version 0.1.0 --environment test",
    "upload:spec": "node ../../packages/cli/dist/cli.js upload-spec --service castle-client --service-version 0.1.0 --environment test --spec spec/openapi.json",
    "deploy:consumer": "node ../../packages/cli/dist/cli.js deploy-service --type consumer --name castle-client --service-version 0.1.0 --environment test",
    "record:deployment": "node ../../packages/cli/dist/cli.js record-deployment --service castle-client --service-version 0.1.0 --environment test",
    "can-i-deploy": "node ../../packages/cli/dist/cli.js can-i-deploy --type consumer --service castle-client --environment test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@entente/consumer": "workspace:*",
    "@entente/types": "workspace:*",
    "@hono/node-server": "^1.13.5",
    "@hono/swagger-ui": "^0.4.1",
    "dotenv": "^17.2.2",
    "hono": "^4.6.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250913.0",
    "@types/node": "^24.0.0",
    "swagger-ui-dist": "^5.17.14",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "latest"
  },
  "keywords": ["entente", "contract-testing", "example", "consumer", "hono", "client"]
}
