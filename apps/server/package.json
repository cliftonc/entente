{
  "name": "@entente/server",
  "version": "0.1.0",
  "description": "Central Entente service with Hono API and React UI",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:api": "wrangler dev src/api/index.ts --port 3001",
    "dev:api:worker": "wrangler dev src/api/index.ts --port 3001",
    "dev:ui": "vite",
    "build": "npm run typecheck && npm run build:api && npm run build:ui",
    "build:api": "wrangler build",
    "build:ui": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/* build .wrangler && mkdir -p dist/ui",
    "test": "echo 'No tests yet'",
    "deploy": "wrangler deploy",
    "db:generate": "dotenv -e .dev.vars -- drizzle-kit generate",
    "db:migrate": "dotenv -e .dev.vars -- drizzle-kit migrate",
    "db:studio": "dotenv -e .dev.vars -- drizzle-kit studio",
    "db:push": "dotenv -e .dev.vars -- drizzle-kit push",
    "migrate:service-versions": "tsx src/scripts/migrate-service-versions.ts"
  },
  "dependencies": {
    "@entente/consumer": "workspace:*",
    "@entente/fixtures": "workspace:*",
    "@entente/types": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "@hono/node-server": "^1.19.2",
    "@hono/zod-validator": "^0.7.2",
    "@neondatabase/serverless": "^1.0.1",
    "@octokit/app": "^16.1.0",
    "@octokit/rest": "^22.0.0",
    "@tanstack/react-query": "^5.87.4",
    "@tanstack/react-query-devtools": "^5.87.4",
    "@types/dagre": "^0.7.53",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/semver": "^7.7.1",
    "@types/ws": "^8.18.1",
    "@xyflow/react": "^12.8.5",
    "arctic": "^3.7.0",
    "dagre": "^0.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "framer-motion": "^12.23.13",
    "hono": "^4.6.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-syntax-highlighter": "^15.6.6",
    "semver": "^7.7.2",
    "swagger-ui-react": "^5.29.0",
    "ws": "^8.18.3",
    "zod": "^3.25.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/swagger-ui-react": "^5.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "daisyui": "^4.12.24",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^2.1.8",
    "wrangler": "^4.36.0"
  },
  "keywords": [
    "contract-testing",
    "server",
    "hono",
    "cloudflare-workers",
    "react"
  ]
}
