{
  "name": "@entente/server",
  "version": "0.1.0",
  "description": "Central Entente service with Hono API and React UI",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:api": "tsx watch --clear-screen=false src/api/dev-server.ts",
    "dev:api:worker": "wrangler dev src/api/index.ts --port 3001",
    "dev:ui": "vite",
    "build": "npm run build:api && npm run build:ui",
    "build:api": "wrangler build",
    "build:ui": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist build .wrangler",
    "test": "vitest",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@entente/fixtures": "workspace:*",
    "@entente/types": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "@hono/node-server": "^1.19.2",
    "@neondatabase/serverless": "^1.0.1",
    "@tanstack/react-query": "^5.87.4",
    "@tanstack/react-query-devtools": "^5.87.4",
    "arctic": "^3.7.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.6.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "daisyui": "^4.12.24",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "wrangler": "^4.36.0"
  },
  "keywords": ["contract-testing", "server", "hono", "cloudflare-workers", "react"]
}
