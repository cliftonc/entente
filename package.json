{
  "name": "entente",
  "version": "0.1.0",
  "description": "Schema-first contract testing with centralized management",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build-packages.js",
    "build:verbose": "pnpm --workspace-concurrency=1 -r build:verbose",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "clean": "pnpm -r clean",
    "clean:deep": "pnpm clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules pnpm-lock.yaml",
    "server:dev": "pnpm --filter @entente/server dev",
    "server:build": "pnpm --filter @entente/server build",
    "docs:dev": "pnpm --filter @entente/docs dev",
    "docs:build": "pnpm --filter @entente/docs build",
    "docs:deploy": "pnpm --filter @entente/docs deploy",
    "cli": "pnpm --filter @entente/cli build && node packages/cli/dist/cli.js",
    "tunnel:setup": "node scripts/setup-tunnel.js",
    "tunnel:start": "node scripts/start-tunnel.js",
    "tunnel:quick": "node scripts/quick-tunnel.js",
    "version-and-publish": "./scripts/version-and-publish.sh",
    "version-and-publish:dry-run": "./scripts/version-and-publish-dry-run.sh"
  },
  "keywords": ["contract-testing", "openapi", "testing", "api", "schema-first"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
